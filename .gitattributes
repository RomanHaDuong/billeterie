# See https://git-scm.com/docs/gitattributes for more about git attribute files.

# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for all text files
*.rb text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.js text eol=lf
*.erb text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.sh text eol=lf
*.conf text eol=lf
*.xml text eol=lf
*.service text eol=lf
Rakefile text eol=lf
Gemfile text eol=lf
Capfile text eol=lf
config.ru text eol=lf

# Denote binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary

# Mark the database schema as having been generated.
db/schema.rb linguist-generated

# Mark any vendored files as having been vendored.
vendor/* linguist-vendored
config/credentials/*.yml.enc diff=rails_credentials
config/credentials.yml.enc diff=rails_credentials
