<div class="col-md-4 mb-4">
  <div class="card person-card h-100" style="box-shadow: 0 4px 6px rgba(146, 130, 105, 0.3);">
    <%# Image %>
    <div class="person-card-img-wrapper">
      <% if fournisseur.image.attached? %>
        <%= image_tag fournisseur.image, class: "person-card-img" %>
      <% else %>
        <%= image_tag "placeholder_person.png", class: "person-card-img" %>
      <% end %>
    </div>

    <div class="card-body">
      <%# Card content %>
      <h5 class="card-title"><%= fournisseur.name %></h5>

      <%# Description with line clamp moved to CSS %>
      <p class="card-text line-clamp">
        <%= truncate(fournisseur.bio, length: 150, separator: ' ', omission: '...') %>
      </p>

      <%# Footer %>
      <div class="mt-4 d-flex justify-content-between align-items-center">
        <span class="price-tag">
          <%# <%= number_to_currency(fournisseur.id, unit: "â‚¬") %>
        </span>
        <%= link_to fournisseur_path(fournisseur), class: 'btn btn-outline-primary' do %>
          Voir plus <i class="fa-solid fa-arrow-right ms-2"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
