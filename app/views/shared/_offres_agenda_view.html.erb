<% offres_collection = @offres || [] %>

<% if offres_collection.empty? %>
  <div class="card border-0 shadow-sm mb-4">
    <div class="card-body text-center py-5">
      <p class="text-muted mb-0">Aucun atelier disponible pour le moment.</p>
    </div>
  </div>
<% else %>
  <% offres_collection.group_by { |o| o.date_prevue&.beginning_of_day }.sort_by { |day, _| day || Date.new(9999) }.each do |day, offres| %>
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-header bg-white border-0 py-3">
        <h5 class="fw-bold mb-0"><%= l(day, format: :long) %></h5>
      </div>

      <div class="list-group list-group-flush">
        <% offres.sort_by { |o| o.date_prevue&.to_time || Time.new(9999) }.each do |offre| %>
        <div class="list-group-item p-4 border-0">
          <div class="row align-items-center">
            <div class="col-auto">
              <div class="text-center" style="min-width: 60px;">
                <div class="fw-bold" style="font-size: 0.85rem; line-height: 1.2;">
                  <%= l(offre.date_prevue, format: :time_only) %>h
                </div>
              </div>
            </div>

            <div class="col-auto d-none d-md-block">
              <% if offre.image.attached? %>
                <%= image_tag offre.image, class: "rounded", style: "width: 60px; height: 60px; object-fit: cover;" %>
              <% else %>
                <%= image_tag "placeholder_offre.png", class: "rounded", style: "width: 60px; height: 60px; object-fit: cover;" %>
              <% end %>
            </div>

            <div class="col">
              <%= link_to offre_path(offre), class: "text-decoration-none text-reset" do %>
                <div class="d-flex align-items-center">
                  <% if offre.fournisseur.image.attached? %>
                    <%= image_tag offre.fournisseur.image, class: "rounded me-3 d-none d-lg-block", style: "width: 48px; height: 48px; object-fit: cover;" %>
                  <% end %>
                  <div>
                    <h6 class="mb-0 fw-bold"><%= offre.titre %></h6>
                    <p class="text-muted mb-0 small">
                      <% if offre.duree.present? %>
                        <i class="fa-regular fa-clock me-1"></i> <%= offre.duree %>
                      <% end %>
                      <% if offre.salle.present? %>
                        <i class="fa-solid fa-location-dot ms-3 me-1"></i> <%= offre.salle %>
                      <% end %>
                      <% if offre.place %>
                        <i class="fa-solid fa-users ms-3 me-1"></i> <%= offre.bookings.count %>/<%= offre.place %>
                      <% end %>
                    </p>
                    <% if current_user && offre.user_registered?(current_user) %>
                      <span class="badge bg-success mt-1">
                        <i class="fa-solid fa-check me-1"></i>Inscrit
                      </span>
                    <% elsif offre.full? %>
                      <span class="badge bg-danger mt-1">Complet</span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>

            <div class="col-auto">
              <% if current_user %>
                <% if offre.user_registered?(current_user) %>
                  <%= button_to "Se désinscrire", unregister_offre_path(offre), method: :delete, class: "btn btn-outline-danger btn-sm", data: { confirm: "Êtes-vous sûr ?" } %>
                <% elsif offre.full? %>
                  <button class="btn btn-secondary btn-sm" disabled>Complet</button>
                <% else %>
                  <%= button_to "S'inscrire", register_offre_path(offre), method: :post, class: "btn btn-primary btn-sm" %>
                <% end %>
              <% else %>
                <%= link_to "S'inscrire", new_user_registration_path, class: "btn btn-primary btn-sm" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <% end %>
<% end %>
