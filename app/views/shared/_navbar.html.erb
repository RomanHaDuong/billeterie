<%# main navbar div %>
<nav class="navbar navbar-expand-lg navbar-light bg-white py-3 shadow-sm">

  <%# logo linked to root %>
  <div class="container">
    <%= link_to root_path, class: "navbar-brand" do %>
      <span class="fw-bold fs-4 text-primary">Festival</span>
    <% end %>

    <%# navbar toggler hamburger menu for smaller screens %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <%# navbar navigation buttons %>
    <div class="collapse navbar-collapse" id="navbarContent">

      <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to 'Ateliers', offres_path, class: 'nav-link px-3 fw-medium' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Intervenants', fournisseurs_path, class: 'nav-link px-3 fw-medium' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Le 47', lieu_path, class: 'nav-link px-3 fw-medium' %>
        </li>
      </ul>

      <div class="d-flex align-items-center">
        <% if user_signed_in? %>
          <div class="nav-item dropdown">
            <button class="nav-link dropdown-toggle d-flex align-items-center border-0 bg-transparent"
                    type="button"
                    data-bs-toggle="dropdown"
                    aria-expanded="false">
              <% if current_user.avatar.attached? %>
                <%= image_tag rails_blob_path(current_user.avatar, disposition: "attachment"),
                    class: 'rounded-circle me-2',
                    size: '32x32',
                    alt: 'Profile picture' %>
              <% else %>
                <div class="bg-light rounded-circle me-2 d-flex align-items-center justify-content-center"
                    style="width: 32px; height: 32px;">
                  <i class="bi bi-person text-muted"></i>
                </div>
              <% end %>
            </button>

            <ul class="dropdown-menu dropdown-menu-end border-0 shadow-sm mt-2">
              <li>
                <%= link_to user_path(current_user), class: 'dropdown-item d-flex align-items-center py-2' do %>
                  <i class="bi bi-person-circle me-2"></i>
                  <span>Mon profil</span>
                <% end %>
              </li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <%= link_to destroy_user_session_path,
                    data: { turbo_method: :delete },
                    class: 'dropdown-item d-flex align-items-center py-2 text-danger' do %>
                  <i class="bi bi-box-arrow-right me-2"></i>
                  <span>DÃ©connexion</span>
                <% end %>
              </li>
            </ul>
          </div>
        <% else %>
          <%= link_to 'Connexion', new_user_session_path, class: 'btn btn-outline-primary me-2' %>
          <%= link_to "S'inscrire", new_user_registration_path, class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
