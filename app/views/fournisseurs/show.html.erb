  <%# Tab Contents %>
  <div class="tab-content">
    <%# Ateliers Tab %>
    <div class="tab-pane fade show active" id="ateliers">
      <div class="row g-4">
        <% @fournisseur.offres.each do |offre| %>
          <%= render partial: 'shared/offre', locals: { offre: offre } %>
        <% end %>
      </div>
    </div>

    <%# Parcours Tab %>
    <div class="tab-pane fade" id="parcours">
      <div class="timeline">
