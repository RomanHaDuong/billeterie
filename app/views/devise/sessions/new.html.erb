<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm border-0">
        <div class="card-body p-5">
          <h2 class="text-center mb-4 fw-bold">Se connecter</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group mb-3">
              <%= f.label :email, class: "form-label fw-medium" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                  class: "form-control form-control-lg",
                  placeholder: "Email" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, class: "form-label fw-medium" %>
              <%= f.password_field :password, autocomplete: "current-password",
                  class: "form-control form-control-lg",
                  placeholder: "Mot de passe" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group mb-4">
                <div class="form-check">
                  <%= f.check_box :remember_me, { class: "form-check-input" }, "1", "0" %>
                  <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label text-muted" %>
                </div>
              </div>
            <% end %>

            <%= f.submit "Se connecter", class: "btn btn-primary w-100 btn-lg mb-4" %>
          <% end %>

          <div class="text-center">
            <p class="text-muted">Vous n'avez pas encore de compte?</p>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
