<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm border-0">
        <div class="card-body p-5">
          <h2 class="text-center mb-4 fw-bold">Changer votre mot de passe</h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="form-group mb-3">
              <%= f.label :password, "Nouveau mot de passe", class: "form-label fw-medium" %>
              <% if @minimum_password_length %>
                <span class="text-muted fs-6">(<%= @minimum_password_length %> caract√®res minimum)</span>
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
                  class: "form-control form-control-lg",
                  placeholder: "Entrez votre nouveau mot de passe" %>
            </div>

            <div class="form-group mb-4">
              <%= f.label :password_confirmation, "Confirmez le mot de passe", class: "form-label fw-medium" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password",
                  class: "form-control form-control-lg",
                  placeholder: "Confirmez votre nouveau mot de passe" %>
            </div>

            <%= f.submit "Changer mon mot de passe", class: "btn btn-primary w-100 btn-lg mb-4" %>
          <% end %>

          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
