<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm border-0">
        <div class="card-body p-5">
          <h2 class="text-center mb-4 fw-bold">Créer un compte</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group mb-3">
              <%= f.label :email, class: "form-label fw-medium" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                  class: "form-control form-control-lg",
                  placeholder: "Email" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, class: "form-label fw-medium" %>
              <% if @minimum_password_length %>
                <span class="text-muted fs-6">(<%= @minimum_password_length %> characters minimum)</span>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password",
                  class: "form-control form-control-lg",
                  placeholder: "Créez un mot de passe" %>
            </div>

            <div class="form-group mb-4">
              <%= f.label :password_confirmation, class: "form-label fw-medium" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password",
                  class: "form-control form-control-lg",
                  placeholder: "Confirmez votre mot de passe" %>
            </div>

            <%# Profile picture %>
            <div class="form-group mb-4 text-center">
              <div class="avatar-upload">
                <div class="avatar-preview mb-3">
                  <%= image_tag "placeholder_person.png", id: "avatarPreview", class: "rounded-circle", width: 100, height: 100, style: "object-fit: cover;" %>
                </div>
                <%= f.label :image, class: "btn btn-outline-primary btn-sm" do %>
                  <i class="bi bi-camera me-2"></i>Upload Photo
                  <%= f.file_field :image, class: "d-none", accept: "image/*",
                      onchange: "document.getElementById('avatarPreview').src = window.URL.createObjectURL(this.files[0])" %>
                <% end %>
              </div>
            </div>

            <%= f.submit "Sign up", class: "btn btn-primary w-100 btn-lg mb-4" %>
          <% end %>

          <div class="text-center">
            <p class="text-muted">Vous avez déjà un compte ?</p>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
