<!DOCTYPE html>
<html>
  <head>
    <title>Billetterie du festival 47</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= javascript_include_tag "text_block_inline_edit", "data-turbo-track": "reload" %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">


    <%# font-awesome %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <%= favicon_link_tag asset_path('favicon.png') %>
  </head>

  <body>
  <%= render 'shared/navbar' %>

  <%# Flash messages %>
  <% if notice || alert %>
    <div class="container mt-4">
      <% if notice %>
        <div class="alert alert-dismissible fade show shadow-sm" role="alert" style="background-color: #d4edda; border: none; border-left: 4px solid #28a745; border-radius: 8px; padding: 1rem 1.5rem;">
          <div class="d-flex align-items-center">
            <i class="bi bi-check-circle-fill text-success me-3" style="font-size: 1.5rem;"></i>
            <div class="flex-grow-1" style="color: #155724; font-weight: 500;">
              <%= notice %>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        </div>
      <% end %>

      <% if alert %>
        <div class="alert alert-dismissible fade show shadow-sm" role="alert" style="background-color: #f8d7da; border: none; border-left: 4px solid #dc3545; border-radius: 8px; padding: 1rem 1.5rem;">
          <div class="d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill text-danger me-3" style="font-size: 1.5rem;"></i>
            <div class="flex-grow-1" style="color: #721c24; font-weight: 500;">
              <%= alert %>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <%= yield %>

  <%= render 'shared/footer' %>

  <%# bootstrap package with popper %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  
  <%# Mobile menu toggle %>
  <script>
    (function() {
      let menuOpen = false;
      
      function openMenu() {
        const overlay = document.getElementById('mobileMenuOverlay');
        const line1 = document.getElementById('menuLine1');
        const line2 = document.getElementById('menuLine2');
        const line3 = document.getElementById('menuLine3');
        const items = document.querySelectorAll('#menuItems li');
        const cta = document.getElementById('menuCTA');
        const account = document.getElementById('menuAccount');
        
        menuOpen = true;
        overlay.style.display = 'block';
        document.body.style.overflow = 'hidden';
        
        requestAnimationFrame(() => {
          overlay.style.opacity = '1';
          line1.style.transform = 'rotate(45deg) translateY(7px)';
          line2.style.opacity = '0';
          line3.style.transform = 'rotate(-45deg) translateY(-7px)';
          
          items.forEach((item, i) => {
            setTimeout(() => {
              item.style.opacity = '1';
              item.style.transform = 'translateY(0)';
            }, 100 + (i * 100));
          });
          
          if (cta) setTimeout(() => { cta.style.opacity = '1'; cta.style.transform = 'translateY(0)'; }, 400);
          if (account) setTimeout(() => { account.style.opacity = '1'; account.style.transform = 'translateY(0)'; }, 500);
        });
      }
      
      function closeMenu() {
        const overlay = document.getElementById('mobileMenuOverlay');
        const line1 = document.getElementById('menuLine1');
        const line2 = document.getElementById('menuLine2');
        const line3 = document.getElementById('menuLine3');
        const items = document.querySelectorAll('#menuItems li');
        const cta = document.getElementById('menuCTA');
        const account = document.getElementById('menuAccount');
        
        overlay.style.opacity = '0';
        line1.style.transform = '';
        line2.style.opacity = '1';
        line3.style.transform = '';
        document.body.style.overflow = '';
        
        setTimeout(() => {
          overlay.style.display = 'none';
          items.forEach(item => {
            item.style.opacity = '0';
            item.style.transform = 'translateY(20px)';
          });
          if (cta) { cta.style.opacity = '0'; cta.style.transform = 'translateY(20px)'; }
          if (account) { account.style.opacity = '0'; account.style.transform = 'translateY(20px)'; }
          menuOpen = false;
        }, 400);
      }
      
      document.addEventListener('DOMContentLoaded', function() {
        const btn = document.getElementById('mobileMenuBtn');
        const close = document.getElementById('mobileMenuClose');
        const links = document.querySelectorAll('#mobileMenuOverlay a');
        
        if (btn) {
          btn.addEventListener('click', function(e) {
            e.preventDefault();
            if (!menuOpen) openMenu();
          });
        }
        
        if (close) {
          close.addEventListener('click', function(e) {
            e.preventDefault();
            if (menuOpen) closeMenu();
          });
        }
        
        links.forEach(link => {
          link.addEventListener('click', function() {
            if (menuOpen) closeMenu();
          });
        });
        
        // Hover effects
        document.querySelectorAll('#mobileMenuOverlay .btn').forEach(btn => {
          btn.addEventListener('mouseenter', function() {
            this.style.transform = 'scale(1.05)';
            this.style.boxShadow = '0 8px 16px rgba(0,0,0,0.15)';
          });
          btn.addEventListener('mouseleave', function() {
            this.style.transform = 'scale(1)';
            this.style.boxShadow = '';
          });
        });
        
        document.querySelectorAll('#menuItems a').forEach(link => {
          link.addEventListener('mouseenter', function() { this.style.color = '#7B8467'; });
          link.addEventListener('mouseleave', function() { this.style.color = '#595E47'; });
        });
      });
    })();
  </script>
</body>
