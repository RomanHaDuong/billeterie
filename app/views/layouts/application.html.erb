<!DOCTYPE html>
<html>
  <head>
    <title>Billetterie du festival 47</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= javascript_include_tag "text_block_inline_edit", "data-turbo-track": "reload" %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">


    <%# font-awesome %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <%= favicon_link_tag asset_path('favicon.png') %>
  </head>

  <body>
  <%= render 'shared/navbar' %>

  <%# Flash messages %>
  <% if notice || alert %>
    <div class="container mt-3">
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
    </div>
  <% end %>

  <%= yield %>

  <%= render 'shared/footer' %>

  <%# bootstrap package with popper %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  
  <%# Close navbar on mobile when clicking links %>
  <script>
    document.addEventListener('turbo:load', function() {
      const navbarToggler = document.querySelector('.navbar-toggler');
      const navbarCollapse = document.getElementById('navbarContent');
      const navLinks = document.querySelectorAll('.navbar-nav .nav-link, .navbar-collapse .btn, .navbar-collapse a');
      
      if (navbarToggler && navbarCollapse) {
        navLinks.forEach(function(link) {
          link.addEventListener('click', function() {
            if (window.innerWidth < 992 && navbarCollapse.classList.contains('show')) {
              navbarToggler.click();
            }
          });
        });
      }
    });
    
    document.addEventListener('DOMContentLoaded', function() {
      const navbarToggler = document.querySelector('.navbar-toggler');
      const navbarCollapse = document.getElementById('navbarContent');
      const navLinks = document.querySelectorAll('.navbar-nav .nav-link, .navbar-collapse .btn, .navbar-collapse a');
      
      if (navbarToggler && navbarCollapse) {
        navLinks.forEach(function(link) {
          link.addEventListener('click', function() {
            if (window.innerWidth < 992 && navbarCollapse.classList.contains('show')) {
              navbarToggler.click();
            }
          });
        });
      }
    });
  </script>
</body>
