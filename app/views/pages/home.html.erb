<%# Hero Banner %>
<div class="container-fluid p-0">
  <div class="hero-banner position-relative">
    <%= image_tag "final_long_banner.jpg", class: "w-100", alt: "Festival Banner" %>
    <div class="hero-content">
      <h1 class="mb-3">
        <%= editable_text('home.hero_title', 'Festival du 47') %>
      </h1>
      <p class="lead mb-4">
        <%= editable_text('home.hero_subtitle', "L'heure du mouvement - Rejoins la communauté des Eco-Workers") %>
      </p>
    </div>
  </div>

  <%# Welcome Section %>
  <div class="container py-5 my-4">
    <div class="row justify-content-center text-center">
      <div class="col-lg-8">
        <h2 class="display-4 fw-bold mb-4" style="color: var(--primary-color);">
          <%= editable_text('home.title', 'Bienvenue au Festival du 47') %>
        </h2>
        <p class="lead fs-4 text-muted mb-4">
          <%= editable_text('home.subtitle', 'Un événement unique pour connecter, apprendre et créer ensemble') %>
        </p>
        <p class="fs-5 mb-5">
          <%= editable_text('home.description', "Rejoins-nous pour une expérience inoubliable d'ateliers, de rencontres et de partage au cœur de l'écosystème des travailleurs conscients.") %>
        </p>
        <%= link_to editable_text('home.cta_button', 'Voir le Programme'), offres_path, class: 'btn btn-primary btn-lg px-5 py-3 mb-3' %>
        <div class="mt-4">
          <%= link_to editable_text('home.archive_link', 'Archives - Édition 2025'), archive_2025_path, class: 'btn btn-outline-secondary' %>
        </div>
      </div>
    </div>
  </div>

  <%# Features Section %>
  <div class="feature-section">
    <div class="container py-5">
      <div class="row text-center">
        <div class="col-md-4 mb-4 mb-md-0">
          <div class="feature-icon">
            <i class="bi bi-calendar-event"></i>
          </div>
          <h3><%= editable_text('home.feature1_title', 'Ateliers Variés') %></h3>
          <p><%= editable_text('home.feature1_desc', "Des dizaines d'ateliers animés par des experts passionnés") %></p>
        </div>
        <div class="col-md-4 mb-4 mb-md-0">
          <div class="feature-icon">
            <i class="bi bi-people"></i>
          </div>
          <h3><%= editable_text('home.feature2_title', 'Communauté') %></h3>
          <p><%= editable_text('home.feature2_desc', 'Rencontre et connecte avec des eco-workers inspirants') %></p>
        </div>
        <div class="col-md-4">
          <div class="feature-icon">
            <i class="bi bi-geo-alt"></i>
          </div>
          <h3><%= editable_text('home.feature3_title', 'Lieu Unique') %></h3>
          <p><%= editable_text('home.feature3_desc', 'Dans un cadre exceptionnel propice aux échanges') %></p>
        </div>
      </div>
    </div>
  </div>

  <%# Info Cards Section %>
  <div class="container py-5 my-5">
    <div class="row g-4">
      <div class="col-md-4">
        <div class="card info-card h-100">
          <div class="card-header">
            <i class="bi bi-ticket-perforated me-2"></i>
            <%= editable_text('home.card1_title', 'Réserve ta Place') %>
          </div>
          <div class="card-body">
            <p class="mb-4"><%= editable_text('home.card1_text', "Inscris-toi aux ateliers qui t'intéressent et organise ton agenda personnalisé.") %></p>
            <%= link_to 'Voir les Ateliers', offres_path, class: 'btn btn-primary w-100' %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card info-card h-100">
          <div class="card-header">
            <i class="bi bi-star me-2"></i>
            <%= editable_text('home.card2_title', 'Deviens Intervenant') %>
          </div>
          <div class="card-body">
            <p class="mb-4"><%= editable_text('home.card2_text', 'Partage ton expertise et anime un atelier pour la communauté.') %></p>
            <% if user_signed_in? %>
              <%= link_to 'Proposer un Atelier', dashboard_path, class: 'btn btn-success w-100' %>
            <% else %>
              <%= link_to 'Se Connecter', new_user_session_path, class: 'btn btn-success w-100' %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card info-card h-100">
          <div class="card-header">
            <i class="bi bi-chat-dots me-2"></i>
            <%= editable_text('home.card3_title', 'Rejoins la Communauté') %>
          </div>
          <div class="card-body">
            <p class="mb-4"><%= editable_text('home.card3_text', 'Entre en contact avec les autres participants sur WhatsApp.') %></p>
            <%= link_to 'Rejoindre le Groupe', 'https://chat.whatsapp.com/GUR9QDnolAaFn3vJBAGZ1S', class: 'btn btn-info w-100', target: :blank do %>
              <i class="bi bi-whatsapp me-2"></i>WhatsApp
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# CTA Section %>
  <div class="cta-section text-center">
    <div class="container">
      <h2 class="mb-4">
        <%= editable_text('home.cta_title', "Prêt à Vivre l'Expérience ?") %>
      </h2>
      <p class="lead fs-4 mb-5">
        <%= editable_text('home.cta_text', 'Rejoins-nous pour une édition exceptionnelle !') %>
      </p>
      <%= link_to 'Prendre mon Pass - 47€', 'https://opencollective.com/le-47/events/festival-du-47-3eme-edition-0cfc8c1c/order/83209?interval=oneTime&amount=47&name=&legalName=&email=', class: 'btn btn-light btn-lg px-5 py-3', target: :blank %>
    </div>
  </div>

  <%= render 'shared/sponsors' %>
</div>
